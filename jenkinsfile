pipeline {
    agent any

    environment {
        NODE_HOME = tool 'node'
        PATH = "${NODE_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh "npm install"
            }
        }

        stage('Build') {
            steps {
                sh "npm run build"
            }
        }

        stage('Unit Tests') {
            steps {
                sh "npm test"
            }
        }

        stage('Deploy to GitHub Pages') {
            steps {
                script {
                    // Run the deploy script
                    sh "npm run deploy"

                    // Capture the GitHub Pages URL
                    def githubPagesUrl = "https://${env.GITHUB_REPOSITORY.split('/')[0]}.github.io/${env.GITHUB_REPOSITORY.split('/')[1]}/"

                    // Print the GitHub Pages URL to the console
                    echo "GitHub Pages URL: ${githubPagesUrl}" 
                }
            }
        }
    }

    post {
        success {
            echo 'Build and tests passed. Ready for deployment.'
        }
        failure {
            echo 'Build or tests failed. Please check the logs for details.'
        }
    }
}
